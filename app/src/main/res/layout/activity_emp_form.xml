<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="1dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#75EFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".EmpFormActivity">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CB001BB3"
                android:text="NAME:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="400dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg"
                android:hint="Enter First Name.."
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Last Name.."
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CB001BB3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="DESIGNATION:"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/desig"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Enter Designation"
                android:background="@drawable/edittext_bg"
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CB001BB3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Department:"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/dept"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Department"
                android:textColor="#FFFFFF"
                android:textColorHint="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#CB001BB3"
                android:text="Email:"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Email"
                android:textColor="#ffffff"
                android:textColorHint="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#CB001BB3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Mobile:"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/mnumber"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Your Mobile Number"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textColorHint="#000000"
                android:textSize="20dp" />



        <RadioGroup
            android:id="@+id/RadioGr"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/background2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/mgender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="#CB001BB3"
                android:text="Gender"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Male"
                android:textColor="#FFEB3B"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="Female"
                android:textColor="#FFEB3B"
                android:textSize="20dp" />
        </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="#CB001BB3"
                android:text="Address"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter your address.."
                android:inputType=""
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:textColorHint="#000000" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="#F5FBF6"
            android:textSize="30dp"
            android:textStyle="italic|bold">

        </Button>



        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/Design"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvdept"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvmobile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvgender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvaddress"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#94001170"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
