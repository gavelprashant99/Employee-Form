<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/nameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#2A000000"
        android:text="LOGIN"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameEditText"
        android:layout_alignBottom="@id/nameEditText"
        android:layout_marginStart="40dp"
        android:background="#9A390043"
        android:gravity="center"
        android:text="USERNAME"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignStart="@id/passwordEditText"
        android:layout_alignEnd="@id/passwordEditText"
        android:layout_toEndOf="@id/nameTextView"/>

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/passwordEditText"
        android:layout_alignBottom="@id/passwordEditText"
        android:layout_marginStart="40dp"
        android:background="#9A390043"
        android:gravity="center"
        android:text="PASSWORD"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/nameEditText"
        android:layout_toEndOf="@id/passwordTextView"
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"
        android:text="CLICK HERE TO LOGIN"
        android:textSize="22dp"
        android:textStyle="bold|italic"
        app:strokeColor="#9A1515" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chipslogo"/>
</RelativeLayout>